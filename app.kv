
<CalButton@Button>:
	font_size: 25
	
<Calculator>:
	id:calculator
	display:entry
	rows:5
	padding:10
	spacing:10
	
	
	BoxLayout:
		TextInput:
			font_size: 25
			id:entry
			multiline:False
			
	BoxLayout:
		spacing:10

		CalButton:
			text: "7"
			on_press:entry.text+=self.text
		CalButton:
			text: "8"
			on_press:entry.text+=self.text
		CalButton:
			text: "9"
			on_press:entry.text+=self.text
		CalButton:
			text: "+"
			on_press:entry.text+=self.text

	BoxLayout:
		spacing:10

		CalButton:
			text: "4"
			on_press:entry.text+=self.text
		CalButton:
			text: "5"
			on_press:entry.text+=self.text
		CalButton:
			text: "6"
			on_press:entry.text+=self.text
		CalButton:
			text: "-"
			on_press:entry.text+=self.text
			
	BoxLayout:
		spacing:10

		CalButton:
			text: "1"
			on_press:entry.text+=self.text
		CalButton:
			text: "2"
			on_press:entry.text+=self.text
		CalButton:
			text: "3"
			on_press:entry.text+=self.text
		CalButton:
			text: "*"
			on_press:entry.text+=self.text
			
	BoxLayout:
		spacing:10

		CalButton:
			text: "clear"
			on_press:entry.text=""
		CalButton:
			text: "0"
			on_press:entry.text+=self.text
		CalButton:
			text: "="
			on_press:calculator.calculate(entry.text)
		CalButton:
			text: "/"
			on_press:entry.text+=self.text
